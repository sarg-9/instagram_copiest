<h1>Stories</h1>
<table>
  <thead>
    <tr>
      <th>Story Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if current_user.avatar.attached? %>
      <%= link_to user_path(current_user.id) do %>
        <%= image_tag current_user.avatar ,style:"border:1px solid black; border-radius:50%; height:250px; width:250px;"%>
      <% end %>
      <br>
      Name : &nbsp;&nbsp;
      <%= current_user.name%>&nbsp;&nbsp;
      <a href="<%= new_user_story_path%>">
        <i class="fa fa-plus-circle fa-2x text-info"></i>
      </a>
      &nbsp;&nbsp;  
    <% end %>
    <br>
    <br>
    <div class="d-flex flex-row justify-content-start flex-wrap">
      <% @stories.each do |story| %>
        <% if story.user_id == current_user.id%>
          <tr>
            <td><%= story.caption %></td>
            <%= image_tag story.image ,style:"border:1px solid black; border-radius:50%; height:250px; width:250px;" %>
          </tr>
          <tr>
            <td><%= link_to 'Edit', edit_user_story_path(current_user.id, story.id) %></td>
            <td><%= link_to 'Destroy', user_story_path(current_user.id, story.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <%end%>
      <% end %>
    </div>
  </tbody>
</table>
<br>
<%= link_to 'Back to Profile', current_user %>
