<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="card float-right w-30 h-45 mt-4">
    <div class="d-flex justify-content-center mt-4">
      <%= image_tag "Logo.png"%>
    </div>
    <div class="d-flex flex-column justify-content-center mt-3">
      <div class="d-flex justify-content-center mt-4 p-0">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" ,placeholder: "Name" ,class: "w-30"%>
      </div>
      <div class="d-flex justify-content-center mt-4 p-0">
        <%= f.text_field :username, autocomplete: "username" ,placeholder: "User Name" ,class: "w-30"%>
      </div>
      <div class="d-flex justify-content-center mt-4 p-0">
        <%= f.label :avatar , style:"margin-left:2.25rem;" %>
        <%= f.file_field :avatar , style:"margin-left:3.75rem;",direct_upload: true  %>
      </div>
      <div class="d-flex justify-content-center mt-4 p-0">
        <%= f.text_field :mobilenumber, autocomplete: "mobilenumber" ,placeholder: "Mobile Number" ,class: "w-35"%>
      </div>
      <div class="d-flex justify-content-center mt-4 p-0">
        <%= f.email_field :email, autocomplete: "email" ,placeholder: "Email" ,class: "w-30"%>
      </div>
      <div class="d-flex justify-content-center mt-4 p-0">
        <%= f.password_field :password, autocomplete: "new-password" ,placeholder: "Password (Minimum: 6 charachters)" ,class: "w-30"%>
      </div>
      <div class="d-flex justify-content-center mt-4 p-0">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder: "Confirm Password" ,class: "w-30"%>
      </div>
      <div class="d-flex justify-content-center mt-4 p-0">
        <%= f.submit "Sign up", class:"btn btn-primary" ,class: "w-30" %>
      </div>
      <div class="btn btn-light mx-auto w-35">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <div class="card float-left">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
<% end %>
